<section class="full-ingredient-listing-sec">
    <div class="container">
        <h4> {{ section.settings.heading }} </h4>
        <div class="ingredient-listing">
            <ul>
                {% for block in section.blocks %}
                    {% if block.settings.ingredient != blank %}                        
                        <li>{{ block.settings.ingredient }}</li>                    
                    {% endif %}
                {% endfor %}
                <li>Cinnamomum Cassia Bark Extract</li>
                    <li>Water (Aqua)</li>
                    <li>Rose Extract</li>
                    <li>Decyl Glucoside</li>
                    <li>Prunus Armeniaca (Apricot) Fruit Extract</li>
                    <li>Propanediol</li>
                    <li>Pyrus Malus (Apple) Fruit Extract</li>
                    <li>Glycerin* (Vegetal)</li>
                    <li>Glycine Soja (Soybean) Oil</li>
                    <li>Olea Europaea (Olive) Fruit Oil*</li>
                    <li>Eugenia Caryophyllus (Clove) Flower Extract</li>
                    <li>Cocos Nucifera (Coconut) Oil*</li>
                    <li>Cucumis Melo Cantalupensis Fruit Extract</li>
                    <li>Chondrus Crispus (Carrageenan)</li>
                    <li>Cananga Odorata Flower Extract</li>
                    <li>Cellulose Gum</li>
                    <li>Caprylic/Capric Triglyceride</li>
                    <li>Eucalyptus Globulus Leaf Oil*</li>
                    <li>Citric Acid</li>
                    <li>Xanthan Gum</li>
                    <li>Arginine</li>
                    <li>Levulinic Acid</li>
                    <li>Citrus Medica Limonum (Lemon) Peel Oil*</li>
                    <li>Sodium Levulinate</li>
                    <li>Sodium Gluconate</li>
                    <li>Orchis Mascula Flower Extract</li>
                    <li>Camellia Sinensis Leaf Extract</li>
                    <li>Coffea Arabica (Coffee) Leaf/Seed Extract</li>
                    <li>Potassium Sorbate</li>
                    <li>Jasminum Officinale (Jasmine) Flower/Leaf Extract</li>
            </ul>
            <p>{{ block.settings.note }}</p>
        </div>
    </div>
</section>

{% schema %}
{
    "name" : "Ingredient Listing",
    "settings" : [
       {
           "type": "text",
           "id": "heading",
           "label": "Heading"
       },
       {
           "type": "text",
           "id": "note",
           "label": "Note"
       }
    ],
    "blocks" : [
        {
            "name" : "ingredient-listing",
            "type" : "Ingredient",
           "settings": [
              {
                  "type": "text",
                "id": "ingredient",
                  "label": "Ingredient"
              }
           ]
        }
    ]
}
{% endschema %}