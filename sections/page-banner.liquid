<div class="empty-div"></div>
<section class="about-banner shop-banner">
    <div class="shop-banner-img">
        {% if section.settings.back_image %}
        <img src="{{ section.settings.back_image | img_url : "master" }}" alt="about-banner">
        {% else %}
            {{ 'lifestyle-2' | placeholder_svg_tag}}
        {% endif %}
    </div>
    <div class="about-banner-text">
        <div class="container">
            <h4> {{ section.settings.subheading }} </h4>
            <h2> {{ section.settings.heading }}</h2>
        </div>
    </div>
</section>

{% schema %}
{
    "name" : "Page Banner",
   "settings": [
       {
           "type" : "image_picker",
           "id" : "back_image",
           "label" : "Background Image"
       },
      {
          "type": "text",
          "id": "heading",
          "label": "Heading"
      },
     {
         "type": "text",
         "id": "subheading",
         "label": "Subheading"
     }
   ]
}
{% endschema %}