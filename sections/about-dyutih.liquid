<section class="dyutih-do-tea-sec">
    <div class="container">
        <div class="dyutih-do-tea-text">
            <p>{{ section.settings.description }}</p>
            {% if section.settings.description != blank %}
            <div class="dyutih-do-arrow-img">
                <img src="{{ 'dyutih-do-arrow.svg' | asset_url }}" alt="dyutih-do-arrow">
            </div>
            {% endif %}
        </div>
    </div>
</section>


{% schema %}
{
    "name" : "Richtext",
   "settings": [
            {
                "id" : "description",
            "type": "textarea",
            "label": "Description"
            }
   ]
}
{% endschema %}
