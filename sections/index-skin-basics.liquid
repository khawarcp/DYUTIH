<section class="dyutih-skin-care-sec">
    <h2> {{ section.settings.title }} </h2>
    <div class="dyutih-skin-care-tabs">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home"
                    type="button" role="tab" aria-controls="home" aria-selected="true">Cleansers + Toners</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
                    type="button" role="tab" aria-controls="profile" aria-selected="false">Glow Boosting
                    Elixirs</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact"
                    type="button" role="tab" aria-controls="contact" aria-selected="false">Skin Quenching
                    Moisturizers</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="container">
                    <div class="row">
                      {% for prod in collections[section.settings.collection_clenaser].products limit : 3 %}
                        <div class="col-md-4">
                            <div class="skin-care-col">
                                <div class="skin-care-img">
                                    <img src="assets/images/skin-care-img1.png" alt="skin-care-img1">
                                </div>
                                <div class="skin-care-text">
                                    <h3> {{ prod.title }} </h3>
                                    <h4> {{ product.metafields.my_fields.product_subtitle }} </h4>
                                    <p> {{ prod.description }} </p>
                                    <div class="custom-site-btn">
                                        <a href="{{ prod.url }}"><img src="assets/images/button-arrow.svg" alt="">SHOP NOW </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                      {% endfor %}
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <div class="container">
                    <div class="row">
                      
                        <div class="col-md-4">
                            <div class="skin-care-col">
                                <div class="skin-care-img">
                                    <img src="assets/images/skin-care-img1.png" alt="skin-care-img1">
                                </div>
                                <div class="skin-care-text">
                                    <h3>PURIFYING</h3>
                                    <h4>Coconut Gel Cleanser</h4>
                                    <p>This unique Coconut Gel Cleanser features moisturizing Coconut Oil and Aloe
                                        Vera to help gently cleanse the face, body and hair without drying.</p>
                                    <div class="custom-site-btn">
                                        <a href="#"><img src="assets/images/button-arrow.svg" alt="">SHOP NOW </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="skin-care-col">
                                <div class="skin-care-img">
                                    <img src="assets/images/skin-care-img2.png" alt="skin-care-img2">
                                </div>
                                <div class="skin-care-text">
                                    <h3>REFINING</h3>
                                    <h4>White Willow pH Toner</h4>
                                    <p>Enriched with moisturizing and antioxidant ingredients, it helps to gently
