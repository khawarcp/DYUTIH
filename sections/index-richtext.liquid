<section class="about-dyutih-sec">
    <div class="container">
        <div class="about-text">
            <h2> {{ section.settings.heading }} </h2>
            {{ section.settings.info }}
            <div class="about-btn">
                {% if section.settings.button_url != blank and section.settings.button_text != blank  %}
                <a href="{{ section.settings.button_url }}"><img src="{{ 'button-arrow.svg' | asset_url }}" alt="Button Arrow">{{ section.settings.button_text }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</section>


{% schema %}
{
    "name" : "Banner",
   "settings": [
     {
         "type": "text",
         "id": "heading",
         "label": "Heading"
     },
     {
         "type": "richtext",
         "id": "info",
         "label": "Description"
     },
   {
       "type": "text",
       "id": "button_text",
       "label": "Button Text",
       "default": "Shop Now"
   },
   {
       "type": "url",
       "id" : "button_url",
         "label": "Button URL"
   }
   ],
   "presets":[
    {
        "name": "Banner",
        "category": "Custom Section"
    }
   ]
}
{% endschema %}